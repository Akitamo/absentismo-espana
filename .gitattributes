# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Data files
*.json text
*.csv text
*.xml text
*.txt text
*.md text
*.yml text
*.yaml text

# Config files
.gitignore text
.gitattributes text
requirements.txt text
.env text

# Documentation
README* text
LICENSE text
CHANGELOG text

# Binary files
*.xlsx binary
*.xls binary
*.doc binary
*.docx binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
